{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "outDir": "./build",
        "baseUrl": ".",
        "strict": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "test"]
}